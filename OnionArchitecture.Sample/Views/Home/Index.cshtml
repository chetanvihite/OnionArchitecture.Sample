@model IEnumerable<OnionArchitecture.Sample.Models.UserViewModel>

@{
    ViewBag.Title = "Home Page";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>Onion Architecture Sample</h1>
                
            </hgroup>
            <p>
                This is the sample app outlining Onion Architecture principles. <br/>
                The table data shown below is fetched from Infrastructure/Repository
            </p>
        </div>
    </section>
}

<table>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Date Created</th>
    </tr>
    @foreach (var item in Model) {
          
        <tr >
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
                  
        </tr>
    }
</table>